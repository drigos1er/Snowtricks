{% extends 'layout.html.twig' %}



{% block title %}SnowTricks|Mon Compte{% endblock %}

        {% block body %}



            <!-- Section: contact -->
            <section id="contact" class="home-section text-center">
                <div class="heading-contact">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2">
                                <div class="wow bounceInDown" data-wow-delay="0.4s">
                                    <div class="section-heading">
                                        <h2>MON COMPTE</h2>
                                        <i class="fa fa-2x fa-angle-down"></i>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">


                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            <div class="boxed-grey">

                                {% for message in app.flashes('success')  %}
                                    <div class="alert alert-success"> {{ message }}</div>

                                {% endfor  %}

                                {{ form_start(form) }}

                                    <div class="row">
                                        <div class="col-md-6 col-md-offset-3">

                                            <div class="form-group">

                                                <div class="form-group">
                                                    {{ form_row(form.firstname,{'label': 'Nom ','attr': {'placeholder': 'Nom ','class': 'form-control'}}) }}

                                                    <div class="validation"> </div>
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                {{ form_row(form.lastname,{'label': 'Prénoms ','attr': {'placeholder': 'Prénoms ','class': 'form-control'}}) }}

                                                <div class="validation"> </div>
                                            </div>

                                            <div class="form-group">


                                                {{ form_row(form.contact,{'label': 'Téléphone ','attr': {'Placeholder': 'Téléphone','class': 'form-control'}}) }}

                                                <div class="validation"> </div>
                                            </div>

                                            <div class="form-group">

                                                {{ form_row(form.picture) }}


                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-skin pull-center" id="btnContactUs">
                                                Mettre à Jour</button>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>

                            <br><br>
                            <div style="font-size: 16px">   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('sitecom_updatepwd') }}" class="btn btn-success " >
                                    Modifier mon mot de passe  ICI</a></div>
                        </div>

                    </div>

                </div>
            </section>
            <!-- /Section: contact -->


        {% endblock %}

